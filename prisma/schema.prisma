datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  email    String @unique

  recipes   Recipe[]
  favorites Favorite[]

  @@map("user")
}

model Recipe {
  id           Int        @id @default(autoincrement())
  title        String
  description  String
  instructions String
  img_url      String
  favorites    Favorite[]

  user_id    Int
  user       User @relation(fields: [user_id], references: [id])

  category_id Int
  category    Category @relation(fields: [category_id], references: [id])

  @@map("recipe")
}

model Favorite {
  userId Int
  foodId Int

  user   User   @relation(fields: [userId], references: [id])
  recipe Recipe @relation(fields: [foodId], references: [id])

  @@id([userId, foodId])
  @@unique([userId, foodId])
  @@map("favorite")
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]

  @@map("category")
}
