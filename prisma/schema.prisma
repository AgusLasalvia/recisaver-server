datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  email     String    @unique

  favorites Favorite[]

  @@map("user") // Mapea al nombre original si es en min√∫scula
}

model Recipe {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  user_id      Int
  instructions String
  imgUrl       String

  favorites    Favorite[]

  @@map("recipe")
}

model Favorite {
  userId Int
  foodId Int

  user   User   @relation(fields: [userId], references: [id])
  recipe Recipe @relation(fields: [foodId], references: [id])

  @@id([userId, foodId])           // Clave primaria compuesta
  @@unique([userId, foodId])       // Asegura unicidad
  @@map("favorite")
}
