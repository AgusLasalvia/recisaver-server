datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  email    String @unique

  recipes   Recipe[] // Relaci√≥n 1:N (un usuario tiene muchas recetas)
  favorites Favorite[]

  @@map("user")
}

model Recipe {
  id           Int    @id @default(autoincrement())
  title        String
  description  String
  instructions String
  imgUrl       String
  favorites Favorite[]

  userId Int
  user   User @relation(fields: [userId], references: [id])
  
  categoryId Int
	category   Category @relation(fields: [categoryId], references: [id])



  @@map("recipe")
}

model Favorite {
  userId Int
  foodId Int

  user   User   @relation(fields: [userId], references: [id])
  recipe Recipe @relation(fields: [foodId], references: [id])

  @@id([userId, foodId]) // Clave primaria compuesta
  @@unique([userId, foodId]) // Asegura unicidad
  @@map("favorite")
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]

  @@map("category")
}
